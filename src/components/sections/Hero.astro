---
import { basics } from "@cv";
import Section from "@/components/Section.astro";

import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import WorldMap from "@/icons/WorldMap.astro";

//import type { SocialIcon } from "@/types";
import LinkedIn from "@/icons/LinkedIn.astro";
import GitHub from "@/icons/GitHub.astro";
import SitioWeb from "@/icons/SitioWeb.astro";
import type { RecordType } from "astro:schema";


const { name, label, image, location, profiles, email, phone } = basics;
const { city, region, address } = location;

const SOCIAL_ICONS: RecordType<string, any> = { LinkedIn, GitHub, SitioWeb };
---

<Section>
    <div class="conteiner">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <WorldMap />
                {city}, {address}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a
                            href={`mailto:${Mail}`}
                            title="Enviar un correo electronico a ${name} al correo ${email}"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    phone && (
                        <a
                            href={`tel:${Phone}`}
                            title="LLamar a ${name} al nÃºmero ${phone}"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Phone />
                        </a>
                    )
                }
                {
                    profiles.map(({ network, username, url }) => {
                        const Icon = SOCIAL_ICONS[network];
                        return (
                            <a
                                href={url}
                                title={`Ir a la cuenta de ${network} de ${name} @ ${username}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon />
                            </a>
                        );
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .conteiner {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        grap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    span {
        display: flex;
        color: #666;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
    }

    footer {
        display: flex;
        color: #555;
        font-size: 0.65rem;
        gap: 4px;
        margin-top: 8px;
    }

    footer a {
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    footer a:hover {
        background: #eee;
        border: 1px solid #ddd;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 128px;
        border-radius: 16px;
    }

